<p>First name: <%= @order.first_name()%></p>
<p>Last name: <%= @order.last_name()%></p>
<p>Topping: <%= @order.topping()%></p>
<p>Quantity: <%= @order.quantity()%></p>
<p>Total: <%= @order.total()%></p>

<form action="/pizza-orders/<%=@order.id%>/edit" method="get" target="_self">
  <input type="submit" value="Edit This Order">
</form>

<form action="/pizza-orders/<%= @order.id %>/delete" method="post">
<input type="submit" value="DELETE THIS ORDER">
</form>


